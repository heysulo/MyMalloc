{
    "tasks": [
        {
            "type": "shell",
            "label": "Execute CMake",
            "command": "/usr/bin/cmake",
            "args": [
                "--build",
                "build"
            ],
            "dependsOn": [
                "Execute CMake Build"
            ]
        },
        {
            "type": "shell",
            "label": "Execute CMake Build",
            "command": "/usr/bin/cmake",
            "args": [
                "-S",
                ".",
                "-B",
                "build"
            ]
        },
        {
            "type": "shell",
            "label": "Execute Testcases",
            "command": "ctest",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [],
            "dependsOn": [
                "Execute CMake"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "MyApplication.cpp",
                "MyMalloc.cpp",
                "",
                "-o",
                "${fileDirname}/build/bin/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}